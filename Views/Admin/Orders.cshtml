@model IEnumerable<PrintMarket.Models.Order>

@{
    ViewData["Title"] = "Siparişler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Sipariş Yönetimi</h1>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center">
        Henüz sipariş bulunmamaktadır.
    </div>
}
else
{
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Sipariş ID</th>
                            <th>Müşteri Adı</th>
                            <th>Tarih</th>
                            <th>Kargo Adresi</th>
                            <th class="text-center">Durum</th>
                            <th>Toplam Tutar</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>#@item.Id</td>
                                <td class="fw-bold">@item.CustomerName</td>
                                <td>@item.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td><small>@item.CustomerAddress</small></td>
                                <td class="text-center">
                                    @{
                                        var badgeClass = item.Status switch {
                                            "Yeni Sipariş" => "bg-primary",
                                            "Onaylandı" => "bg-success",
                                            "Kargolandı" => "bg-info",
                                            "Reddedildi" => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">@item.Status</span>
                                </td>
                                <td class="text-success fw-bold">
                                    @{
                                        var currency = item.OrderItems.FirstOrDefault()?.Product?.Currency ?? "₺";
                                    }
                                    @item.TotalPrice.FormatPrice(currency)
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-info text-white" onclick="openOrderDetail(@item.Id)" title="Hızlı Gözat">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <form asp-action="UpdateOrderStatus" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="status" value="Onaylandı" />
                                            <button type="submit" class="btn btn-sm btn-success" title="Onayla" @(item.Status == "Onaylandı" || item.Status == "Kargolandı" || item.Status == "Reddedildi" ? "disabled" : "")>
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </form>
                                        <form asp-action="UpdateOrderStatus" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="status" value="Kargolandı" />
                                            <button type="submit" class="btn btn-sm btn-primary" title="Kargola" @(item.Status == "Kargolandı" || item.Status == "Reddedildi" ? "disabled" : "")>
                                                <i class="fas fa-truck"></i>
                                            </button>
                                        </form>
                                        <form asp-action="UpdateOrderStatus" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="status" value="Reddedildi" />
                                            <button type="submit" class="btn btn-sm btn-danger" title="Reddet" @(item.Status == "Reddedildi" || item.Status == "Kargolandı" ? "disabled" : "")>
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </form>
                                        <button type="button" class="btn btn-sm btn-secondary delete-order-btn" data-id="@item.Id" title="Kaldır">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

<!-- Sipariş Detay Modalı -->
<div class="modal fade" id="orderDetailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4 shadow" id="orderDetailModalContent">
            <!-- İçerik AJAX ile yüklenecek -->
            <div class="modal-body text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Yükleniyor...</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openOrderDetail(orderId) {
            var modal = new bootstrap.Modal(document.getElementById('orderDetailModal'));
            modal.show();
            
            // Yükleme animasyonu
            $('#orderDetailModalContent').html('<div class="modal-body text-center py-5"><div class="spinner-border text-primary" role="status"></div></div>');

            // AJAX ile detayı çek
            $.get('/Admin/GetOrderDetails/' + orderId, function(data) {
                $('#orderDetailModalContent').html(data);
            }).fail(function() {
                $('#orderDetailModalContent').html('<div class="modal-body text-center text-danger">Detaylar yüklenirken bir hata oluştu.</div>');
            });
        }

        $(document).ready(function() {
            // Soft Delete AJAX İşlemi
            $('.delete-order-btn').click(function() {
                var btn = $(this);
                var orderId = btn.data('id');
                var row = btn.closest('tr');

                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu sipariş listeden kaldırılacak!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!',
                    cancelButtonText: 'İptal'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Admin/DeleteOrder',
                            type: 'POST',
                            data: { id: orderId },
                            success: function(response) {
                                if (response.success) {
                                    // Satırı animasyonla kaldır
                                    row.fadeOut(500, function() { 
                                        $(this).remove(); 
                                    });
                                    
                                    const Toast = Swal.mixin({
                                        toast: true,
                                        position: 'top-end',
                                        showConfirmButton: false,
                                        timer: 3000
                                    });
                                    Toast.fire({
                                        icon: 'success',
                                        title: response.message
                                    });
                                } else {
                                    Swal.fire('Hata', response.message, 'error');
                                }
                            },
                            error: function() {
                                Swal.fire('Hata', 'İşlem sırasında bir sorun oluştu.', 'error');
                            }
                        });
                    }
                });
            });
        });
    </script>
}
