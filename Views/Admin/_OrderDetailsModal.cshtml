@model PrintMarket.Models.Order

<div class="modal-header bg-corporate text-white">
    <h5 class="modal-title" id="orderDetailModalLabel">Sipariş Detayı #@Model.Id</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="row mb-4">
        <div class="col-md-6 border-end">
            <h6 class="text-muted text-uppercase small fw-bold">Alıcı Bilgileri</h6>
            <p class="mb-1 fw-bold">@Model.CustomerName</p>
            <p class="mb-1 text-muted"><i class="fas fa-phone me-2"></i>@Model.PhoneNumber</p>
            <p class="mb-1 text-muted"><i class="fas fa-envelope me-2"></i>@Model.CustomerEmail</p>
            <p class="small text-muted mt-2"><i class="fas fa-map-marker-alt me-2"></i>@Model.CustomerAddress</p>
        </div>
        <div class="col-md-6 ps-4">
            <h6 class="text-muted text-uppercase small fw-bold">Sipariş Özeti</h6>
            <div class="d-flex justify-content-between mb-2">
                <span>Tarih:</span>
                <span class="fw-bold">@Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
                <span>Durum:</span>
                <span class="badge bg-@(@Model.Status == "Onaylandı" ? "success" : @Model.Status == "Kargolandı" ? "info" : "warning")">@Model.Status</span>
            </div>
            <div class="d-flex justify-content-between mt-3 pt-3 border-top">
                <span class="fs-5 fw-bold">Toplam:</span>
                <span class="fs-5 fw-bold text-success">@Model.TotalPrice.ToString("N0") ₺</span>
            </div>
        </div>
    </div>

    <h6 class="text-muted text-uppercase small fw-bold mb-3">Ürünler</h6>
    <div class="table-responsive">
        <table class="table table-sm table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Ürün</th>
                    <th class="text-center">Adet</th>
                    <th class="text-end">Fiyat</th>
                    <th class="text-end">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                                {
                                    <img src="@item.Product.ImageUrl" class="rounded me-2" width="40" height="40" style="object-fit: cover;">
                                }
                                <div>
                                    <div class="fw-bold small">@(item.Product?.Name ?? "Silinmiş Ürün")</div>
                                    <div class="text-muted xsmall">Ref: @item.ProductId</div>
                                </div>
                            </div>
                        </td>
                        <td class="text-center">@item.Quantity</td>
                        <td class="text-end">@item.UnitPrice.ToString("N0") ₺</td>
                        <td class="text-end fw-bold">@((item.Quantity * item.UnitPrice).ToString("N0")) ₺</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal-footer bg-light">
    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Kapat</button>
    <a href="https://wa.me/@Model.PhoneNumber" target="_blank" class="btn btn-sm text-white" style="background-color: #25D366;"><i class="fab fa-whatsapp me-2"></i>Müşteriye Yaz</a>
</div>
