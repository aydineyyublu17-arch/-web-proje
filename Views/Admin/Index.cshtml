@model PrintMarket.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Yönetim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <h1 class="h3 mb-0 text-gray-800">Yönetim Kokpiti</h1>
    <p class="text-muted small">Sistemin genel durumunu buradan takip edebilirsiniz.</p>
</div>

<!-- İstatistik Kartları -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm overflow-hidden h-100 bg-primary text-white dashboard-card">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-2 opacity-75 small fw-bold">Toplam Ürün</h6>
                        <h2 class="display-6 fw-bold mb-0">@Model.TotalProducts</h2>
                    </div>
                    <i class="fas fa-box fa-3x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-black bg-opacity-25 border-0 p-2 text-center small">
                <a href="/AdminProduct/Index" class="text-white text-decoration-none">Detayları Gör <i class="fas fa-arrow-right ms-1"></i></a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card border-0 shadow-sm overflow-hidden h-100 bg-success text-white dashboard-card">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-2 opacity-75 small fw-bold">Toplam Sipariş</h6>
                        <h2 class="display-6 fw-bold mb-0">@Model.TotalOrders</h2>
                    </div>
                    <i class="fas fa-shopping-cart fa-3x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-black bg-opacity-25 border-0 p-2 text-center small">
                <a href="/Admin/Orders" class="text-white text-decoration-none">Detayları Gör <i class="fas fa-arrow-right ms-1"></i></a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm overflow-hidden h-100 bg-warning text-dark dashboard-card">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-2 opacity-75 small fw-bold">Kategoriler</h6>
                        <h2 class="display-6 fw-bold mb-0">@Model.TotalCategories</h2>
                    </div>
                    <i class="fas fa-tags fa-3x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-black bg-opacity-10 border-0 p-2 text-center small">
                <a href="/Admin/Categories" class="text-dark text-decoration-none">Detayları Gör <i class="fas fa-arrow-right ms-1"></i></a>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm overflow-hidden h-100 bg-info text-white dashboard-card">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-2 opacity-75 small fw-bold">Bekleyen Sipariş</h6>
                        <h2 class="display-6 fw-bold mb-0">@Model.PendingOrders</h2>
                    </div>
                    <i class="fas fa-clock fa-3x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-black bg-opacity-25 border-0 p-2 text-center small">
                 <a href="/Admin/Orders" class="text-white text-decoration-none">İşlem Yap <i class="fas fa-arrow-right ms-1"></i></a>
            </div>
        </div>
    </div>
</div>

<!-- Tablolar -->
<div class="row">
    <!-- Son Siparişler -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary"><i class="fas fa-receipt me-2"></i>Son 5 Sipariş</h6>
                <a href="/Admin/Orders" class="btn btn-sm btn-outline-primary rounded-pill">Tümü</a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light small">
                        <tr>
                            <th>ID</th>
                            <th>Müşteri</th>
                            <th>Tutar</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.RecentOrders)
                        {
                            <tr>
                                <td><a href="#" class="text-decoration-none fw-bold">#@order.Id</a></td>
                                <td class="small">@order.CustomerName</td>
                                <td class="fw-bold text-success small">
                                    @{
                                        var currency = order.OrderItems.FirstOrDefault()?.Product?.Currency ?? "₺";
                                    }
                                    @order.TotalPrice.FormatPrice(currency)
                                </td>
                                <td>
                                    @{
                                        var badgeClass = order.Status switch
                                        {
                                            "Onaylandı" => "bg-success",
                                            "Kargolandı" => "bg-info",
                                            _ => "bg-warning text-dark"
                                        };
                                    }
                                    <span class="badge @badgeClass rounded-pill" style="font-size: 0.7rem;">@order.Status</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Son Eklenen Ürünler -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary"><i class="fas fa-box-open me-2"></i>Son Eklenen 5 İlan</h6>
                <a href="/AdminProduct/Index" class="btn btn-sm btn-outline-primary rounded-pill">Tümü</a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light small">
                        <tr>
                            <th style="width: 50px;">Görsel</th>
                            <th>Ürün Adı</th>
                            <th>Fiyat</th>
                            <th>Onay</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.RecentProducts)
                        {
                            <tr>
                                <td>
                                    <img src="@(product.ImageUrl ?? "https://via.placeholder.com/50")" class="rounded border" width="40" height="40" style="object-fit: cover;">
                                </td>
                                <td class="small fw-bold">@product.Name</td>
                                <td class="small text-primary">
                                    @if(product.Currency == "₺") 
                                    { 
                                        <span>@product.Price.ToString("N0") @product.Currency</span> 
                                    } 
                                    else 
                                    { 
                                        <span>@product.Currency@product.Price.ToString("N0")</span> 
                                    }
                                </td>
                                <td>
                                    @if(product.IsApproved) { <i class="fas fa-check-circle text-success" title="Yayında"></i> }
                                    else { <i class="fas fa-clock text-warning" title="Beklemede"></i> }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
