@using PrintMarket.Extensions
@using PrintMarket.Models
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PrintMarket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-corporate border-bottom box-shadow mb-0">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-print"></i> PrintMarket</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Brands">Markalar</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">Hakkımızda</a>
                        </li>
                    </ul>
                    
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item me-2">
                            @{
                                var httpContext = HttpContextAccessor.HttpContext;
                                var cart = httpContext?.Session != null ? httpContext.Session.GetObjectFromJson<List<CartItem>>("Cart") : null;
                                int count = cart != null ? cart.Sum(x => x.Quantity) : 0;
                            }
                            <a class="nav-link position-relative px-3" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart fa-lg"></i>
                                @if (count > 0)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="margin-left: -10px; margin-top: 5px;">
                                        @count
                                    </span>
                                }
                            </a>
                        </li>
                        
                        @if (string.IsNullOrEmpty(httpContext?.Session?.GetString("UserRole")))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                        }
                        else
                        {
                            var role = httpContext.Session.GetString("UserRole");
                            var email = httpContext.Session.GetString("AdminUser") ?? httpContext.Session.GetString("UserEmail");
                            var displayName = httpContext.Session.GetString("DisplayName") ?? email;
                            
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle"></i> @displayName (@role)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    @if (role == "Admin" || role == "Business")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Yönetim Paneli</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">Çıkış Yap</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    @if (ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index")
    {
        <!-- Hero and Search are handled inside Index.cshtml for full width control if needed, 
             but we keep container for body -->
    }

    <div class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "" : "container")">
        <main role="main" class="pb-3">
             @if (TempData["SuccessMessage"] != null)
            {
                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        Swal.fire({
                            title: 'Başarılı!',
                            text: '@Html.Raw(TempData["SuccessMessage"])',
                            icon: 'success',
                            confirmButtonText: 'Tamam',
                            confirmButtonColor: '#1B2631',
                            timer: 5000,
                            timerProgressBar: true
                        });
                    });
                </script>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="row g-5">
                <!-- Sütun 1: Logo ve Tanıtım -->
                <div class="col-lg-5">
                    <h5 class="footer-title">PrintMarket</h5>
                    <p class="text-muted pe-lg-5">Matbaa dünyasının en güvenilir ilan ve alışveriş platformu. İhtiyacınız olan tüm makineleri en uygun fiyatlarla tek bir noktada buluşturuyoruz. Güvenli ticaretin adresi.</p>
                    <div class="d-flex gap-3 mt-4">
                        <a href="#" class="text-white opacity-75 hover-opacity-100 fs-5"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-white opacity-75 hover-opacity-100 fs-5"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-white opacity-75 hover-opacity-100 fs-5"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white opacity-75 hover-opacity-100 fs-5"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>
                
                <!-- Sütun 2: Hızlı Linkler -->
                <div class="col-lg-3">
                    <h5 class="footer-title">Hızlı Linkler</h5>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-chevron-right me-2 small"></i>Ana Sayfa</a></li>
                        <li><a href="/Home/Index#product-container"><i class="fas fa-chevron-right me-2 small"></i>Ürünler</a></li>
                        <li><a asp-controller="Home" asp-action="About"><i class="fas fa-chevron-right me-2 small"></i>Hakkımızda</a></li>
                    </ul>
                </div>
                
                <!-- Sütun 3: İletişim Bilgileri -->
                <div class="col-lg-4" id="footer-contact">
                    <h5 class="footer-title">İletişim</h5>
                    <ul class="footer-links">
                        <li class="d-flex align-items-start mb-3">
                            <i class="fas fa-map-marker-alt me-3 text-corporate-accent mt-1"></i>
                            <span>İkitelli Organize Sanayi Bölgesi, Metal-İş Sanayi Sitesi, Başakşehir, İstanbul</span>
                        </li>
                        <li class="d-flex align-items-center mb-3">
                            <i class="fas fa-envelope me-3 text-corporate-accent"></i>
                            <a href="mailto:info@printmarket.com">info@printmarket.com</a>
                        </li>
                        <li class="d-flex align-items-center">
                            <i class="fas fa-phone-alt me-3 text-corporate-accent"></i>
                            <span>+90 (212) 555 00 00</span>
                        </li>
                    </ul>
                </div>
            </div>
            
            <div class="row copyright-bar">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0">&copy; 2020 - 2026 PrintMarket - Matbaa Makineleri Pazaryeri</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            // Global Smooth Scroll for Hash Links
            $('a[href^="#"]').on('click', function(e) {
                var href = $(this).attr('href');
                if (href !== "#") {
                    var target = $(href);
                    if (target.length) {
                        e.preventDefault();
                        $('html, body').stop().animate({
                            scrollTop: target.offset().top - 100
                        }, 800);
                    }
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
