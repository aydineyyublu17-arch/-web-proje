@model PrintMarket.Models.Product

@{
    ViewData["Title"] = "Ürün Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Ürün Düzenle</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> @ViewBag.Error
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <!-- Resim URL'sini kaybetmemek için -->
            <input type="hidden" asp-for="ImageUrl" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label font-weight-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Price" class="form-label font-weight-bold"></label>
                    <div class="input-group">
                        <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
                        <select asp-for="Currency" class="form-select" style="max-width: 80px;">
                            <option value="₺">₺</option>
                            <option value="₼">₼</option>
                            <option value="$">$</option>
                            <option value="€">€</option>
                        </select>
                    </div>
                    <span asp-validation-for="Price" class="text-danger small"></span>
                    <span asp-validation-for="Currency" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Stock" class="form-label"></label>
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                 <div class="col-md-6 mb-3">
                    <label asp-for="Brand" class="form-label"></label>
                    <input asp-for="Brand" class="form-control" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                 <div class="col-md-6 mb-3">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                        <option value="">-- Kategori Seçiniz --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label class="form-label font-weight-bold">Mevcut Görseller</label>
                @if (Model.Images != null && Model.Images.Any())
                {
                    <div class="row row-cols-2 row-cols-md-4 g-2 mb-3">
                        @foreach (var img in Model.Images)
                        {
                            <div class="col position-relative">
                                <img src="@img.ImagePath" class="img-thumbnail w-100" style="height: 120px; object-fit: cover;" />
                                <button type="button" class="btn btn-sm btn-danger rounded-circle p-1 position-absolute top-0 end-0 m-1" title="Resmi Sil" onclick="deleteProductImage(@img.Id)">
                                    <i class="fas fa-times-circle"></i>
                                </button>
                                @if (Model.ImageUrl == img.ImagePath)
                                {
                                    <span class="badge bg-success position-absolute bottom-0 start-0 m-1">Kapak</span>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted small">Mevcut görsel bulunmamaktadır.</p>
                }
                
                <label class="form-label font-weight-bold">Yeni Görsel Ekle (Birden Fazla Seçebilirsiniz)</label>
                <input type="file" name="Images" class="form-control" accept="image/*" multiple />
                <small class="text-muted">Eklenen yeni görseller mevcutların yanına eklenecektir.</small>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="IsSecondHand" />
                        <label class="form-check-label" asp-for="IsSecondHand"></label>
                    </div>
                </div>
                 <div class="col-md-4">
                    <label asp-for="Year" class="form-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="PrintSpeed" class="form-label"></label>
                    <input asp-for="PrintSpeed" class="form-control" />
                    <span asp-validation-for="PrintSpeed" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="ColorCount" class="form-label"></label>
                    <input asp-for="ColorCount" type="number" class="form-control" />
                    <span asp-validation-for="ColorCount" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ModelName" class="form-label"></label>
                    <input asp-for="ModelName" class="form-control" />
                    <span asp-validation-for="ModelName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Origin" class="form-label"></label>
                    <input asp-for="Origin" class="form-control" />
                    <span asp-validation-for="Origin" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Değişiklikleri Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <!-- Görsel Silme İçin Gizli Form -->
    <form id="deleteImageForm" asp-action="DeleteImage" method="post" style="display:none;">
        <input type="hidden" name="imageId" id="deleteImageId" />
    </form>

    <script>
        function deleteProductImage(imageId) {
            if (confirm('Bu resmi silmek istediğinize emin misiniz?')) {
                document.getElementById('deleteImageId').value = imageId;
                document.getElementById('deleteImageForm').submit();
            }
        }
    </script>
}
