@model PrintMarket.Models.Product

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Ürün Ekle</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label font-weight-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Price" class="form-label font-weight-bold"></label>
                    <div class="input-group">
                        <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
                        <select asp-for="Currency" class="form-select" style="max-width: 80px;">
                            <option value="₺">₺</option>
                            <option value="₼">₼</option>
                            <option value="$">$</option>
                            <option value="€">€</option>
                        </select>
                    </div>
                    <span asp-validation-for="Price" class="text-danger small"></span>
                    <span asp-validation-for="Currency" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Stock" class="form-label"></label>
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                 <div class="col-md-6 mb-3">
                    <label asp-for="Brand" class="form-label"></label>
                    <input asp-for="Brand" class="form-control" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                 <div class="col-md-6 mb-3">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                        <option value="">-- Kategori Seçiniz --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label class="form-label font-weight-bold">Ürün Görselleri (Birden Fazla Seçebilirsiniz)</label>
                <input type="file" name="Images" class="form-control" accept="image/*" multiple />
                <small class="text-muted">Seçtiğiniz ilk görsel ürünün kapak resmi olacaktır.</small>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="IsSecondHand" />
                        <label class="form-check-label" asp-for="IsSecondHand"></label>
                    </div>
                </div>
                 <div class="col-md-4">
                    <label asp-for="Year" class="form-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="PrintSpeed" class="form-label"></label>
                    <input asp-for="PrintSpeed" class="form-control" placeholder="Örn: 15.000 tabaka/saat" />
                    <span asp-validation-for="PrintSpeed" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="ColorCount" class="form-label"></label>
                    <input asp-for="ColorCount" type="number" class="form-control" />
                    <span asp-validation-for="ColorCount" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ModelName" class="form-label"></label>
                    <input asp-for="ModelName" class="form-control" />
                    <span asp-validation-for="ModelName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Origin" class="form-label"></label>
                    <input asp-for="Origin" class="form-control" />
                    <span asp-validation-for="Origin" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
