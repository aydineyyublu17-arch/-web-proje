
@model IEnumerable<string>

@{
    ViewData["Title"] = "Markalar";
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-corporate">Markalar</h1>
        <p class="lead text-muted">Sistemimizde kayıtlı olan tüm markaları keşfedin.</p>
        <div class="mx-auto bg-primary" style="height: 4px; width: 60px; border-radius: 2px;"></div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5 shadow-sm rounded-4">
            <i class="fas fa-info-circle fa-3x mb-3 text-primary"></i>
            <h4>Henüz Marka Bulunmuyor</h4>
            <p class="mb-0">Sistemde kayıtlı ürün bulunmadığı için marka listesi oluşturulamadı.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var brand in Model)
            {
                <div class="col">
                    <a asp-controller="Home" asp-action="Index" asp-route-search="@brand" class="text-decoration-none">
                        <div class="card h-100 border-0 shadow-sm rounded-4 brand-card transition-all">
                            <div class="card-body d-flex flex-column align-items-center justify-content-center p-5">
                                <h2 class="display-4 fw-bold text-corporate mb-0">@brand</h2>
                                <div class="mt-3 text-primary small fw-bold">Ürünleri Gör <i class="fas fa-arrow-right ms-1"></i></div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>

<style>
    .brand-card {
        background: linear-gradient(145deg, #ffffff, #f0f0f0);
        min-height: 200px;
    }

    .brand-card:hover {
        transform: translateY(-10px);
        background: linear-gradient(145deg, #1B2631, #2c3e50);
        box-shadow: 0 1rem 3rem rgba(0,0,0,0.175) !important;
    }

    .brand-card:hover h2 {
        color: #ffffff !important;
    }

    .brand-card:hover .text-primary {
        color: #3498db !important;
    }

    .transition-all {
        transition: all 0.3s ease-in-out;
    }
</style>
