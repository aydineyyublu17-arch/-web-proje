@model IEnumerable<PrintMarket.Models.Product>

<div id="products-area" class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
    <h2 class="fw-bold fs-3 text-corporate">İlanlar</h2>
    <div class="d-flex align-items-center gap-3">
        <div class="dropdown">
            <button class="btn btn-white shadow-sm border rounded-pill dropdown-toggle px-4" type="button" data-bs-toggle="dropdown">
                <i class="fas fa-sort-amount-down-alt me-2"></i>
                @(ViewBag.CurrentSort switch {
                    "price_asc" => "Artan Fiyat",
                    "price_desc" => "Azalan Fiyat",
                    "newest" => "En Yeniler",
                    _ => "Sıralama"
                })
            </button>
            <ul class="dropdown-menu shadow-lg border-0 rounded-4">
                <li><a class="dropdown-item sort-link py-2 px-4" href="#" data-sort="newest">En Yeniler</a></li>
                <li><a class="dropdown-item sort-link py-2 px-4" href="#" data-sort="price_asc">Artan Fiyat</a></li>
                <li><a class="dropdown-item sort-link py-2 px-4" href="#" data-sort="price_desc">Azalan Fiyat</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @{ 
        var productIndex = 0;
        var currentPage = ViewBag.CurrentPage ?? 1;
        var totalItems = ViewBag.TotalItems ?? 0;
        var pageSize = 6;
        // Tersten numaralandırma: en alttaki ürün en küçük numara
        var startNumber = ((currentPage - 1) * pageSize) + pageSize;
    }
    @foreach (var item in Model)
    {
        var currentNumber = startNumber - productIndex;
        productIndex++;
        <div class="col">
            <div class="card h-100 border-0 shadow-sm overflow-hidden">
                <!-- Sıra Numarası -->
                <div class="product-number-badge">@currentNumber</div>
                
                @if (item.IsSecondHand)
                {
                    <div class="card-badge badge-used">2.EL</div>
                }
                else
                {
                    <div class="card-badge badge-new">SIFIR</div>
                }

                @if (item.Images != null && item.Images.Any())
                {
                    <div id="carousel_@item.Id" class="carousel slide" data-bs-interval="false">
                        <div class="carousel-inner" onclick="location.href='@Url.Action("Details", "Home", new { id = item.Id })'" style="cursor: pointer;">
                            @{ var imgIndex = 0; }
                            @foreach (var img in item.Images)
                            {
                                <div class="carousel-item @(imgIndex == 0 ? "active" : "")">
                                    <img src="@img.ImagePath" class="card-img-top" alt="@item.Name" style="height: 240px; object-fit: contain; background-color: #fff;">
                                </div>
                                imgIndex++;
                            }
                        </div>
                        @if (item.Images.Count > 1)
                        {
                            <button class="carousel-control-prev" type="button" data-bs-target="#carousel_@item.Id" data-bs-slide="prev" style="width: 15%;">
                                <span class="carousel-control-prev-icon" aria-hidden="true" style="width: 30px; filter: invert(1);"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carousel_@item.Id" data-bs-slide="next" style="width: 15%;">
                                <span class="carousel-control-next-icon" aria-hidden="true" style="width: 30px; filter: invert(1);"></span>
                            </button>
                        }
                    </div>
                }
                else
                {
                    <img src="@(!string.IsNullOrEmpty(item.ImageUrl) ? item.ImageUrl : "https://via.placeholder.com/400x240?text=Resim+Yok")" class="card-img-top" alt="@item.Name" style="height: 240px; object-fit: contain; background-color: #fff; cursor: pointer;" onclick="location.href='@Url.Action("Details", "Home", new { id = item.Id })'">
                }

                <div class="card-body p-4 d-flex flex-column">
                    <div class="mb-2">
                        <span class="badge bg-white text-corporate border shadow-sm mb-2 px-3 py-2" style="font-size: 0.85rem;">@item.Brand</span>
                        <h5 class="card-title fw-bold mb-0">@item.Name</h5>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                         <p class="text-muted small mb-0">@item.Category?.Name</p>
                         <span class="text-muted border px-2 rounded bg-light" style="font-size: 0.85rem;">İlan: PM-@item.Id.ToString("D6")</span>
                    </div>
                    
                    <div class="d-flex flex-wrap gap-2 mb-4">
                        <span class="badge bg-light text-secondary border px-2 py-1"><i class="far fa-calendar me-1"></i>@(item.Year?.ToString() ?? "-")</span>
                        <span class="badge bg-light text-secondary border px-2 py-1"><i class="fas fa-palette me-1"></i>@(item.ColorCount?.ToString() ?? "-") Renk</span>
                    </div>

                    <div class="mt-auto pt-3 border-top d-flex justify-content-between align-items-center">
                        <div class="text-primary fw-bold fs-4 text-start">
                            @if(item.Currency == "₺") { <span>@item.Price.ToString("N0") @item.Currency</span> }
                            else { <span>@item.Currency@item.Price.ToString("N0")</span> }
                        </div>
                        <div class="text-end">
                            <span class="badge @(item.Stock < 3 ? "bg-danger" : "bg-success") rounded-pill">Stok: @item.Stock</span>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        @if (item.Stock > 0)
                        {
                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="hidden" name="quantity" value="1" />
                                <button type="submit" class="btn btn-modern-cart w-100">
                                    <i class="fas fa-cart-plus me-2"></i>Sepete Ekle
                                </button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-secondary w-100 rounded-pill" disabled>Stokta Yok</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.Any())
{
    <div class="pagination-container d-flex flex-column align-items-center mb-5">
        <div class="pagination-info mb-3">
            Toplam <strong>@ViewBag.TotalPages</strong> sayfa içerisinde <strong>@ViewBag.CurrentPage</strong>. sayfayı görmektesiniz.
        </div>
        
        <div class="d-flex flex-wrap justify-content-center">
            @* Önceki Butonu *@
            <a href="javascript:void(0)" 
               class="pagination-item pagination-btn @(ViewBag.CurrentPage == 1 ? "disabled" : "")" 
               data-page="@(ViewBag.CurrentPage - 1)">
                <i class="fas fa-chevron-left me-2"></i> Önceki
            </a>

            @* Sayfa Numaraları *@
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <a href="javascript:void(0)" 
                   class="pagination-item @(ViewBag.CurrentPage == i ? "active" : "")" 
                   data-page="@i">
                    @i
                </a>
            }

            @* Sonraki Butonu *@
            <a href="javascript:void(0)" 
               class="pagination-item pagination-btn @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")" 
               data-page="@(ViewBag.CurrentPage + 1)">
                Sonraki <i class="fas fa-chevron-right ms-2"></i>
            </a>
        </div>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-light text-center border p-5 shadow-sm rounded-4 mt-4">
        <i class="fas fa-search-minus fa-3x text-muted mb-3"></i>
        <h4>Sonuç Bulunamadı</h4>
        <p class="text-muted">Aramanıza uygun ürün bulunamadı. Lütfen kriterlerinizi güncelleyin.</p>
    </div>
}
