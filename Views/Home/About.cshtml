@{
    ViewData["Title"] = "Hakkımızda";
}

<!-- Hero Section with Machine Background and Gradient Overlay -->
<div class="about-hero-premium position-relative overflow-hidden" style="min-height: 60vh; display: flex; align-items: center; background: url('/brain/5b34dd35-08c0-49b3-803a-6c28b77ae7a9/offset_printing_machine_hero_1768745484495.png') center/cover no-repeat;">
    <div class="overlay position-absolute w-100 h-100 top-0 start-0" style="background: linear-gradient(135deg, rgba(27, 38, 49, 0.95) 0%, rgba(44, 62, 80, 0.6) 100%);"></div>
    <div class="container position-relative" style="z-index: 2;">
        <div class="row">
            <div class="col-lg-8">
                <h1 class="display-2 fw-bold text-white mb-4 animate__animated animate__fadeInUp">Matbaa Dünyasının <br><span class="text-primary">İlk ve Tek</span> Ortak Pazaryeri!</h1>
                <p class="lead fs-3 text-white-50 mb-0 animate__animated animate__fadeInUp animate__delay-1s">Sektördeki büyük bir boşluğu doldurmak için 2020 yılında yola çıktık.</p>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Counter Bar (Trust Bar) -->
<div class="container position-relative" style="margin-top: -50px; z-index: 3;">
    <div class="row g-0 shadow-lg rounded-4 overflow-hidden text-center bg-white border">
        <div class="col-md-4 py-4 border-end">
            <h2 class="fw-bold text-corporate mb-0">500+</h2>
            <p class="text-muted mb-0 small fw-bold text-uppercase tracking-wider">Aktif Makine İlanı</p>
        </div>
        <div class="col-md-4 py-4 border-end bg-light">
            <h2 class="fw-bold text-corporate mb-0">2 Ülke</h2>
            <p class="text-muted mb-0 small fw-bold text-uppercase tracking-wider">TR & AZ Operasyon</p>
        </div>
        <div class="col-md-4 py-4">
            <h2 class="fw-bold text-success mb-0">%100</h2>
            <p class="text-muted mb-0 small fw-bold text-uppercase tracking-wider">Güvenli Ticaret</p>
        </div>
    </div>
</div>

<div class="container my-5 py-5">
    <div class="row align-items-center g-5">
        <!-- Story Text -->
        <div class="col-lg-6">
            <div class="ps-lg-4">
                <h6 class="text-primary fw-bold text-uppercase mb-3 tracking-widest">Vizyonumuz & Hikayemiz</h6>
                <h2 class="display-4 fw-bold text-corporate mb-4">Dijitalleşen Matbaa Sektörü</h2>
                <p class="lead text-muted mb-4" style="font-size: 1.25rem;">
                    "Matbaa makineleri gibi yüksek teknik bilgi gerektiren cihazlar için ne yazık ki sıfır ve ikinci el ürünlerin bir arada bulunduğu, güvenli ve uzmanlaşmış bir platform bulunmuyordu."
                </p>
                <p class="text-secondary mb-5" style="font-size: 1.1rem; line-height: 1.8;">
                    PrintMarket, tam da bu ihtiyacı karşılamak; Türkiye ve Azerbaycan'daki matbaacıları, üreticileri ve tedarikçileri tek bir çatı altında toplamak için kuruldu. 
                    Sektörü dijitalleştirerek sınırları ortadan kaldıran en büyük makine paylaşım ağı olma yolunda ilerliyoruz.
                    <br><br>
                    <strong>İstanbul ve Bakü ofislerimizle hizmetinizdeyiz.</strong>
                </p>
                
                <div class="p-4 bg-light rounded-4 border-start border-primary border-5 mb-4">
                    <p class="mb-0 fst-italic text-corporate" style="font-size: 1.1rem;">
                        "Türkiye ve Azerbaycan matbaa sektörünü dijitalleştirerek, sınırları ortadan kaldıran en büyük makine paylaşım ağı olmak."
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="position-relative p-2 p-md-4">
                <!-- Floating Effect Wrapper -->
                <div class="animate__animated animate__fadeInRight">
                    <!-- Ana Görsel (Endüstriyel Makine) -->
                    <img src="@Url.Content("~/images/about_machine.png")" 
                         class="img-fluid rounded-4 shadow-2-strong border border-light border-opacity-10" 
                         style="border-radius: 20px !important; box-shadow: 0 30px 60px -12px rgba(50,50,93,0.25), 0 18px 36px -18px rgba(0,0,0,0.3) !important;" 
                         alt="Modern Matbaa Makinesi">
                </div>

                <!-- 2020'den Beri Rozeti (Premium Glassmorphism Overlay) -->
                <div class="position-absolute bottom-0 end-0 animate__animated animate__zoomIn animate__delay-1s" 
                     style="margin-bottom: -10px; margin-right: -10px;">
                    <div class="glass-badge p-4 rounded-4 shadow-lg" 
                         style="backdrop-filter: blur(15px); background: rgba(27, 38, 49, 0.85); border: 1px solid rgba(255,255,255,0.1); border-bottom: 3px solid var(--corporate-accent);">
                        <div class="d-flex align-items-center">
                            <div class="me-3 bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" 
                                 style="width: 50px; height: 50px; box-shadow: 0 8px 20px rgba(52, 152, 219, 0.4);">
                                <i class="fas fa-award fa-lg"></i>
                            </div>
                            <div>
                                <span class="h5 fw-bold d-block mb-1 text-white">2020'den Beri</span>
                                <small class="text-white-50 text-uppercase fw-bold tracking-widest" style="font-size: 0.65rem;">Güvenle Büyüyoruz</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <style>
            .glass-badge {
                transition: transform 0.3s ease;
            }
            .glass-badge:hover {
                transform: scale(1.05);
            }
        </style>
    </div>
</div>

